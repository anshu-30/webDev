<!DOCTYPE html>
<html>
<head>
	<title>Expense</title>
	<link rel="stylesheet" type="text/css" href="expense.css">
	<link href="https://fonts.googleapis.com/css2?family=Roboto:wght@300&display=swap" rel="stylesheet">
	<link rel="stylesheet" type="text/css" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
	<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
	<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>
<body>

	    <%- include("partials/nav") %>
			
		<div class="row">	
			<div class="col-lg-5 p-5 m-5"> 
				<h1 class="text-center">Add Expenses Details</h1>
				
				<div style="background:gray; height:500px">
					<form action="/expense" method="POST">
					<div class="form-group col-md-12"> 
      						<label for="Name">Name</label>
      						<input type="Name"lass="form-control" id="Name" name="user[name]">
    				</div>
					<div class="form-row">
    					<div class="form-group col-md-5 ml-4">	
      						<label for="Number">Amount</label>
      						<input type="Number" class="form-control" id="Number" name="user[amount]">
    					</div>
						<div class="form-group col-md-5 ml-4">
      						<label for="Date">Date</label>
      						<input type="Date" class="form-control" id="Date" name="user[date]">
    					</div>	
					</div>
		 	 		<div class="form-group"> 
    					<label for="Textarea1">Description of expenses</label>
    					<textarea class="form-control" style="height:200px"id="Textarea1" name="user[description]"></textarea>
					</div>
					<button  class="btn btn-primary pr-8">Add Expense</button>
					
			
					</form>
				</div>	
			
			</div>
			
			
			<div class="col-lg-5 p-5 m-5"> 
				<h1 class="exp">Expenses<i class="fa fa-plus"></i></h1>	
				
				
					<% user.forEach(function(friend){ %>
					<li style="height:120px"><!--<span><i class="fa fa-trash" aria-hidden="true"></i> </span>-->
						<%= friend.name %>
						<%= friend.amount %> 
						<%- friend.description %>   
						<%= friend.date.toDateString() %>
						<p>
							<a href="/users" class="btn btn-danger">Delete</a>
						</p>	
					</li>
					<% }) %>
			</div>
	</div>
	
	

<!-- <script type="text/javascript" src="expense.js"></script> -->


</body>
</html>